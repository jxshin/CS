<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">课程表</h3>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <% days = ["周一","周二","周三","周四","周五"] %>
          <% times = ["1-2","3-4","5-6(5-7)","7-8","9-11"] %>
          <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th></th>
              <th></th>
              <% days.each do |day| %>
                <th> <%= day %> </th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% times.each do |time| %>
              <tr> 
               <% if time=="1-2" %>
                <td class="combined-table-cell" rowspan="2" > 上午 </td>
               <% else %>
                 <% if time=="5-6(5-7)" %>
                 <td class="combined-table-cell" rowspan="3" > 下午 </td>
                 <% end %>
               <% end %>
               <td><%= time %>节</td>
               <% days.each do |day| %>
                 <td>
                   <% current_user.courses.each do |course| %>
                     <% if time== "5-6(5-7)"%>
                       <% if course.course_time.include?"5-6" or course.course_time.include?"5-7" and course.course_time.include?day %>
                         <%= course.name %> <%= course.course_time%>                      
                       <% end %>
                     <% else%>
                       <% if course.course_time.include?day and course.course_time.include?time %>
                         <%= course.name %>                      
                       <% end %>
                     <% end %>
                   <% end %>
                 </td>
               <% end %>
              </tr>
            <% end %>
          </tbody>
          </table>
        </div
      </div>
    </div>
  </div>
</div>
