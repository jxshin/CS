<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">选课提示</h3>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover">
            <thead>
            <tr>
              <th> </th>
              <% types=Array.new %>
              <% Course.all.each{|c| types.push(c.course_type) } %>
              <% types = types.uniq %>
              <% types.each do |type| %>
                <th> <%= type %> </th>
              <% end %>
              <th> 总学分 </th>
            </tr>
            </thead>
            <tbody>
              <tr>
                <td>要求学分</td>
                <% types.each do |type| %>
                  <td> </td>
                <% end %>
                <td> </td>
              <tr>
              <tr>
                <td>已选学分</td>
                <% total_selected_grade = 0 %>
                <% types.each do |type| %>
                  <% selected_grade = 0 %>
                  <% @courses.each do |course| %>
                    <% if course.course_type == type %>
                      <% selected_grade += course.credit.split("/")[1].to_f %>
                    <% end %>
                  <% end %>
                  <td> <%= selected_grade %> </td>
                  <% total_selected_grade += selected_grade %>
                <% end %>
                <td> <%= total_selected_grade %> </td>
              <tr>
              <tr>
                <td>获得学分</td>
                <% total_grade = 0 %>
                <% types.each do |type| %>
                  <% grade = 0 %>
                  <% current_user.grades.each do |g| %>
                    <% if g.course.course_type == type && g.grade != nil %>
                      <% grade += g.grade %>
                    <% end %>
                  <% end %>
                  <td> <%= grade %> </td>
                  <% total_grade += grade %>
                <% end %>
                <td> <%= total_grade %> </td>
              <tr>
            </tbody>
          </table>
        </div
      </div>
    </div>
  </div>
</div>
